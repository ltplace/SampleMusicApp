<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cmich.place1l.samplemusic.MainActivity">


    <Button
        android:id="@+id/buttonSound_01"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/sampleMusic_textView"
        android:layout_below="@+id/sampleMusic_textView"
        android:layout_marginTop="25dp"
        android:onClick="doBtnClick1"
        android:text="" />

    <Button
        android:id="@+id/buttonSound_02"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/buttonSound_01"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/buttonSound_01"
        android:onClick="doBtnClick2"
        android:text="" />

    <Button
        android:id="@+id/buttonSound_03"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/buttonSound_01"
        android:layout_below="@+id/buttonSound_01"
        android:onClick="doBtnClick3"
        android:text="" />

    <Button
        android:id="@+id/buttonSound_04"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/buttonSound_02"
        android:layout_below="@+id/buttonSound_02"
        android:onClick="doBtnClick4"
        android:text="" />

    <Button
        android:id="@+id/buttonSound_05"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/buttonSound_03"
        android:layout_below="@+id/buttonSound_03"
        android:onClick="doBtnClick5"
        android:text="" />

    <Button
        android:id="@+id/buttonSound_06"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/buttonSound_04"
        android:layout_below="@+id/buttonSound_04"
        android:onClick="doBtnClick6"
        android:text="" />

    <Button
        android:id="@+id/buttonSound_07"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/buttonSound_05"
        android:layout_below="@+id/buttonSound_05"
        android:onClick="doBtnClick7"
        android:text="" />

    <Button
        android:id="@+id/buttonSound_08"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/buttonSound_06"
        android:layout_below="@+id/buttonSound_06"
        android:onClick="doBtnClick8"
        android:text="" />

    <TextView
        android:id="@+id/sampleMusic_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Music"
        android:textSize="26sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/sampleLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/save_btn"
        android:layout_alignStart="@+id/save_btn"
        android:layout_alignTop="@+id/buttonSound_01"
        android:text="Sample Loading Page" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sampleLoad"
        android:layout_marginStart="14dp"
        android:text="Save Kit" />

    <Button
        android:id="@+id/load_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/save_btn"
        android:layout_below="@+id/save_btn"
        android:text="Load Kit" />

</android.widget.RelativeLayout>
